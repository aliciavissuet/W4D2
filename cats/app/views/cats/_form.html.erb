
<% if type == :edit %>
  <% url = cat_url(cat) %>
  <% button_val = "Update Cat" %>
<% elsif type == :new %>
  <% url = cats_url %>
  <% button_val = "Create Cat" %>
<% end %>

<form action="<%= url %>" method="post">
<% if cat.persisted? %>
  <input type="hidden" name="_method" value="patch">
<% end%>
<label for="name">Name
  <input type="text" name="cats[name]" value="<%= cat.name %>">
</label>
<br><br>
<label for="birth_date">Birth Date
  <input type="date" name="cats[birth_date]" value="<%= cat.birth_date %>">
</label>
<br><br>
<label for="sex">Sex
  <label for="M">M
    <input type="radio" name="cats[sex]" value="M" <%= cat.sex == "M" ? "checked" : "" %>>
  </label>
  <label for="F">F
    <input type="radio" name="cats[sex]" value="F" <%= cat.sex == "F" ? "checked" : "" %>>
  </label>
</label>
<br><br>
<label for="color">Color
  <select name="cats[color]">
  <option disabled selected>--choose color--</option>
  <% Cat::COLORS.each do |color|%>
   <option value="<%= color %>" <%= cat.color == color ? "selected" : "" %>> <%= color %></option>
  <% end %>
  </select>
</label>
<br><br>
<label for="description">Description
  <textarea name="cats[description]"><%= cat.description %></textarea>
</label>
<br><br>
<input type="submit" value=<%= button_val %>>
</form>